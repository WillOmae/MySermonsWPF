<Window x:Class="MySermonsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySermonsWPF"
        mc:Ignorable="d"
        Title="MySermons" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="MajorControlStyle" TargetType="Control">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Menu x:Name="MenuBar"
              DockPanel.Dock="Top"
              Style="{StaticResource MajorControlStyle}">
            <MenuItem Header="File"></MenuItem>
            <MenuItem Header="Edit"></MenuItem>
            <MenuItem Header="Options"></MenuItem>
            <MenuItem Header="Help"></MenuItem>
        </Menu>
        <StatusBar x:Name="MSStatusBar"
                   DockPanel.Dock="Bottom"
                   Style="{StaticResource MajorControlStyle}">
            <TextBlock>
                Ready!
            </TextBlock>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <TreeView x:Name="MSTreeview"
                      Grid.Column="0"
                      Grid.ColumnSpan="1"
                      Style="{StaticResource MajorControlStyle}">

            </TreeView>
            <TabControl x:Name="MSTabControl"
                        Grid.Column="1"
                        Grid.ColumnSpan="1"
                        Style="{StaticResource MajorControlStyle}">

            </TabControl>
        </Grid>
    </DockPanel>
</Window>
