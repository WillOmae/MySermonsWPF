<UserControl x:Class="MySermonsWPF.UI.MSViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MySermonsWPF.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MySermonsWPF;component/UI/Styles/NoBorder.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <TextBlock x:Name="MSViewerTitle"
                   x:FieldModifier="private"
                   DockPanel.Dock="Top"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   FontStyle="Italic"
                   FontStretch="Medium"
                   FontWeight="Bold"
                   Padding="10"/>
        <RichTextBox x:Name="MSViewerContent"
                     x:FieldModifier="private"
                     IsReadOnly="True"
                     Style="{DynamicResource NoBorderStyle}"/>
    </DockPanel>
</UserControl>
