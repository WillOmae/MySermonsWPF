<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MySermonsWPF.UI"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="MySermonsWPF.UI.MSRichTextBoxAdv"
             xmlns:commands="clr-namespace:MySermonsWPF.UI.Commands"
             xmlns:converters="clr-namespace:MySermonsWPF.UI.Binding"
             mc:Ignorable="d" 
             Loaded="MSRichTextBoxLoaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <syncfusion:FontFamilyStringConverter x:Key="FontFamilyStringConverter"/>
        <syncfusion:LeftAlignmentToggleConverter x:Key="LeftAlignmentToggleConverter"/>
        <syncfusion:CenterAlignmentToggleConverter x:Key="CenterAlignmentToggleConverter"/>
        <syncfusion:RightAlignmentToggleConverter x:Key="RightAlignmentToggleConverter"/>
        <syncfusion:JustifyAlignmentToggleConverter x:Key="JustifyAlignmentToggleConverter"/>
        <syncfusion:SingleStrikeThroughToggleConverter x:Key="SingleStrikeThroughToggleConverter"/>
        <syncfusion:DoubleStrikeThroughToggleConverter x:Key="DoubleStrikeThroughToggleConverter"/>
        <syncfusion:SubscriptToggleConverter x:Key="SubscriptToggleConverter"/>
        <syncfusion:SuperscriptToggleConverter x:Key="SuperscriptToggleConverter"/>
        <syncfusion:UnderlineToggleConverter x:Key="UnderlineToggleConverter"/>
        <syncfusion:LineSpacingTypeStringConverter x:Key="LineSpacingTypeStringConverter"/>
        <syncfusion:DoubleStringConverter x:Key="DoubleStringConverter"/>
        <syncfusion:HighlightColorToggleConverter x:Key="HighlightColorToggleConverter"/>
        <converters:LineSpacingToggleConverter x:Key="LineSpacingToggleConverter"/>
        <converters:PercentageDoubleConverter x:Key="PercentageDoubleConverter" />
        <converters:PercentageStringConverter x:Key="PercentageStringConverter" />
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Left"
                    Orientation="Horizontal">
            <local:MetadataPanel x:Name="BaseMetadataPanel" Width="200" Visibility="Collapsed"/>
            <Button x:Name="ExpandMetadataPanel"
                    Width="10"
                    ToolTip="Open details panel."
                    Click="ExpandMetadataPanel_Click">
                <Image x:Name="ExpandMetadataPanelImage"
                       Source="Resources/expand.png"/>
            </Button>
        </StackPanel>

        <syncfusion:Ribbon
            x:Name="ribbon"
            DockPanel.Dock="Top"
            SnapsToDevicePixels="True"
            DataContext="{Binding ElementName=BaseRichTextBox}">
            <syncfusion:RibbonTab Caption="Home">
                <syncfusion:RibbonBar Header="File" IsLauncherButtonVisible="False">
                    <syncfusion:RibbonButton Margin="5" SizeForm="Large" ToolTipService.ShowOnDisabled="True" Label="Save" IsToggle="False" LargeIcon="Resources/RibbonImages/Save32.png" Command="ApplicationCommands.Save">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="Save document" >
                                <StackPanel>
                                    <TextBlock  Text="Save document" MaxWidth="300" TextWrapping="Wrap"/>
                                </StackPanel>
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                    <syncfusion:RibbonButton Margin="3" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Label="Clipboard" HorizontalAlignment="Left" IsToggle="False" SmallIcon="Resources/RibbonImages/Home/Clipboard/Paste16.png" Command="syncfusion:SfRichTextBoxAdv.PasteCommand">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="PasteToolTipHeader" >
                                <StackPanel>
                                    <TextBlock Text="PasteToolTip" MaxWidth="250"  TextWrapping="Wrap" />
                                </StackPanel>
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                    <syncfusion:RibbonButton Margin="3" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Label="Plain" HorizontalAlignment="Left" IsToggle="False" SmallIcon="Resources/RibbonImages/Home/Clipboard/Plain16.png" Command="commands:CustomCommands.PastePlain">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="PasteToolTipHeader" >
                                <StackPanel>
                                    <TextBlock Text="PasteToolTip" MaxWidth="250"  TextWrapping="Wrap" />
                                </StackPanel>
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                    <syncfusion:RibbonButton Margin="3" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Label="Cut" HorizontalAlignment="Left" IsToggle="False" SmallIcon="Resources/RibbonImages/Home/Clipboard/Cut16.png" Command="syncfusion:SfRichTextBoxAdv.CutCommand">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="CutToolTipHeader" >
                                <StackPanel>
                                    <TextBlock Text="CutToolTip" MaxWidth="250"  TextWrapping="Wrap" />
                                </StackPanel>
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                    <syncfusion:RibbonButton Margin="3" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Label="Copy" HorizontalAlignment="Left" IsToggle="False" SmallIcon="Resources/RibbonImages/Home/Clipboard/Copy16.png" Command="syncfusion:SfRichTextBoxAdv.CopyCommand">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="CopyToolTipHeader">
                                <StackPanel>
                                    <TextBlock Text="CopyToolTip" MaxWidth="250" TextWrapping="Wrap"/>
                                </StackPanel>
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                    <syncfusion:RibbonButton Margin="3" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Label="Undo" HorizontalAlignment="Left" IsToggle="False" SmallIcon="Resources/RibbonImages/Home/Clipboard/Undo16.png" Command="ApplicationCommands.Undo">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="UndoToolTipHeader">
                                <StackPanel>
                                    <TextBlock Text="UndoToolTip" MaxWidth="250" TextWrapping="Wrap"/>
                                </StackPanel>
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                    <syncfusion:RibbonButton Margin="3" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Label="Redo" HorizontalAlignment="Left" IsToggle="False" SmallIcon="Resources/RibbonImages/Home/Clipboard/Redo16.png" Command="ApplicationCommands.Redo">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="RedoToolTipHeader">
                                <StackPanel>
                                    <TextBlock Text="RedoToolTip" MaxWidth="250" TextWrapping="Wrap"/>
                                </StackPanel>
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                    <syncfusion:RibbonButton Margin="3" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Label="Print" HorizontalAlignment="Left" IsToggle="False" SmallIcon="Resources/RibbonImages/Home/Clipboard/Print32.png" Command="ApplicationCommands.Print">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="PrintToolTipHeader">
                                <StackPanel>
                                    <TextBlock Text="PrintToolTip" MaxWidth="250" TextWrapping="Wrap"/>
                                </StackPanel>
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Header="Font" IsLargeButtonPanel="False" LauncherCommand="syncfusion:SfRichTextBoxAdv.ShowFontDialogCommand">
                    <syncfusion:ButtonPanel Height="24" SeparatorVisibility="Collapsed">
                        <syncfusion:RibbonComboBox x:Name="fontFamilyComboBox" Width="110" IsEditable="True" ToolTipService.ShowOnDisabled="True" Text="{Binding Selection.CharacterFormat.FontFamily, Mode=OneWay, Converter={StaticResource FontFamilyStringConverter}}" SelectedValue="{Binding Selection.CharacterFormat.FontFamily, Mode=TwoWay, Converter={StaticResource FontFamilyStringConverter}}">
                            <syncfusion:RibbonComboBox.ToolTip>
                                <syncfusion:ScreenTip Description="FontToolTipHeader" >
                                    <TextBlock Text="FontToolTip" MaxWidth="250" TextWrapping="Wrap"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonComboBox.ToolTip>
                        </syncfusion:RibbonComboBox>
                        <syncfusion:RibbonComboBox x:Name="fontSizeComboBox" Width="50" IsEditable="True" ToolTipService.ShowOnDisabled="True" Text="{Binding Selection.CharacterFormat.FontSize, Mode=OneWay, Converter={StaticResource DoubleStringConverter}}" SelectedValue="{Binding Selection.CharacterFormat.FontSize, Mode=TwoWay}">
                            <syncfusion:RibbonComboBox.ToolTip>
                                <syncfusion:ScreenTip Description="FontSizeToolTipHeader" >
                                    <TextBlock Text="FontSizeToolTip" TextWrapping="Wrap" MaxWidth="250"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonComboBox.ToolTip>
                        </syncfusion:RibbonComboBox>
                    </syncfusion:ButtonPanel>
                    <syncfusion:ButtonPanel Height="24" SeparatorVisibility="Collapsed">
                        <syncfusion:RibbonButton x:Name="increaseFontSizeButton" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Height="22" Width="24" Padding="2" IsToggle="False" Label="GrowFont" SmallIcon="Resources/RibbonImages/Home/Font/GrowFont16.png">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="IncreaseFontSizeToolTipHeader" >
                                    <TextBlock Text="IncreaseFontSizeToolTip" TextWrapping="Wrap" MaxWidth="250"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton x:Name="decreaseFontSizeButton" SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Height="22" Width="24" Padding="2" Label="DecreaseFont" IsToggle="False" SmallIcon="Resources/RibbonImages/Home/Font/ShrinkFont16.png">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="DecreaseFontSizeToolTipHeader" >
                                    <TextBlock Text="DecreaseFontSizeToolTip" MaxWidth="250" TextWrapping="Wrap"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                    </syncfusion:ButtonPanel>
                    <syncfusion:ButtonPanel Height="24">
                        <syncfusion:RibbonButton SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Label="Bold" Height="22" Width="24" Padding="2" IsToggle="True" HorizontalContentAlignment="Left" IsSelected="{Binding Selection.CharacterFormat.Bold, Mode=TwoWay}" SmallIcon="Resources/RibbonImages/Home/Font/Bold16.png">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="BoldToolTipHeader" >
                                    <TextBlock Text="BoldToolTip" TextWrapping="Wrap" MaxWidth="250"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Height="22" Width="24" Padding="2" Label="Italic" IsToggle="True" IsSelected="{Binding Selection.CharacterFormat.Italic, Mode=TwoWay}" SmallIcon="Resources/RibbonImages/Home/Font/Italic16.png">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="ItalicToolTipHeader" >
                                    <TextBlock Text="ItalicToolTip" TextWrapping="Wrap" MaxWidth="250"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Height="22" Width="24" Padding="2" Label="Underline" IsToggle="True" IsSelected="{Binding Selection.CharacterFormat.Underline, Converter={StaticResource UnderlineToggleConverter}, Mode=TwoWay}" SmallIcon="Resources/RibbonImages/Home/Font/Underline16.png">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="UnderlineToolTipHeader" >
                                    <TextBlock Text="UnderlineToolTip" TextWrapping="Wrap" MaxWidth="250"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Height="22" Width="24" Padding="2" Label="SingleStrike" IsToggle="True" IsSelected="{Binding Selection.CharacterFormat.StrikeThrough, Converter={StaticResource SingleStrikeThroughToggleConverter}, Mode=TwoWay}" SmallIcon="Resources/RibbonImages/Home/Font/Strikethrough16.png">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="StrikethroughToolTipHeader">
                                    <StackPanel>
                                        <TextBlock Text="StrikethroughToolTip"  MaxWidth="250" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Height="22" Width="24" Padding="2" Label="SubScript" IsToggle="True" IsSelected="{Binding Selection.CharacterFormat.BaselineAlignment, Converter={StaticResource SubscriptToggleConverter}, Mode=TwoWay}"  SmallIcon="Resources/RibbonImages/Home/Font/Subscript16.png">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="SubScriptToolTipHeader">
                                    <StackPanel>
                                        <TextBlock Text="SubScriptToolTip"  MaxWidth="250" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                        <syncfusion:RibbonButton SizeForm="ExtraSmall" ToolTipService.ShowOnDisabled="True" Height="22" Width="24" Padding="2" Label="SuperScript" IsToggle="True" IsSelected="{Binding Selection.CharacterFormat.BaselineAlignment, Converter={StaticResource SuperscriptToggleConverter}, Mode=TwoWay}" SmallIcon="Resources/RibbonImages/Home/Font/Superscript16.png">
                            <syncfusion:RibbonButton.ToolTip>
                                <syncfusion:ScreenTip Description="SuperScriptToolTipHeader">
                                    <StackPanel>
                                        <TextBlock Text="SuperScriptToolTip" MaxWidth="250" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </syncfusion:ScreenTip>
                            </syncfusion:RibbonButton.ToolTip>
                        </syncfusion:RibbonButton>
                    </syncfusion:ButtonPanel>
                    <syncfusion:ButtonPanel SeparatorVisibility="Collapsed">
                        <syncfusion:SplitButton x:Name="highlightColorSplitButton" ToolTipService.ShowOnDisabled="True" Padding="2" SmallIcon="Resources/RibbonImages/Home/Font/HighlightColor16.png" SizeForm="ExtraSmall">
                            <syncfusion:SplitButton.ToolTip>
                                <syncfusion:ScreenTip Description="TextHighlightColor">
                                    <StackPanel>
                                        <TextBlock Text="TextHighlightColorToolTip"   MaxWidth="250" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </syncfusion:ScreenTip>
                            </syncfusion:SplitButton.ToolTip>
                            <Grid Background="#FFFFFF">
                                <Grid.Resources>
                                    <Style x:Key="HighlightColorToggleButtonStyle" TargetType="{x:Type ToggleButton}">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="1"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                    <Border x:Name="border" BorderBrush="Red" BorderThickness="0" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                                                        <Border x:Name="checkedBorder" BorderBrush="Yellow" BorderThickness="0" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                                                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                        </Border>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter Property="BorderThickness" TargetName="border" Value="1"/>
                                                            <Setter Property="BorderThickness" TargetName="checkedBorder" Value="1"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="true">
                                                            <Setter Property="BorderThickness" TargetName="border" Value="1"/>
                                                            <Setter Property="BorderThickness" TargetName="checkedBorder" Value="1"/>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="true">
                                                            <Setter Property="BorderThickness" TargetName="border" Value="1"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="yellowHighlightButton" Grid.Column="0" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 0}" Margin="3" Height="24" Width="24" Background="#FFFFFF00" ToolTip="YellowHighlightToolTip"/>
                                    <ToggleButton x:Name="brightGreenHighlightButton" Grid.Column="1" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 1}" Margin="3"  Height="24" Width="24" Background="#FF00FF00" ToolTip="BrightGreenHighlightToolTip"/>
                                    <ToggleButton x:Name="turquoiseHighlightButton" Grid.Column="2" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 2}" Margin="3" Height="24" Width="24" Background="#FF00FFFF" ToolTip="TurquoiseHighlightToolTip"/>
                                    <ToggleButton x:Name="pinkHighlightButton" Grid.Column="3" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 3}" Margin="3" Height="24" Width="24" Background="#FFFF00FF" ToolTip="PinkHighlightToolTip"/>
                                    <ToggleButton x:Name="blueHighlightButton" Grid.Column="4" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 4}" Margin="3" Height="24" Width="24" Background="#FF0000FF" ToolTip="BlueHighlightToolTip"/>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="redHighlightButton" Grid.Column="0" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 5}" Margin="3" Height="24" Width="24" Background="#FFFF0000" ToolTip="RedHighlightToolTip"/>
                                    <ToggleButton x:Name="darkBlueHighlightButton" Grid.Column="1" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 6}" Margin="3" Height="24" Width="24" Background="#FF000080" ToolTip="DarkBlueHighlightToolTip"/>
                                    <ToggleButton x:Name="tealHighlightButton" Grid.Column="2" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 7}" Margin="3" Height="24" Width="24" Background="#FF008080" ToolTip="TealHighlightToolTip"/>
                                    <ToggleButton x:Name="greenHighlightButton" Grid.Column="3" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 8}" Margin="3" Height="24" Width="24" Background="#FF008000" ToolTip="GreenHighlightToolTip"/>
                                    <ToggleButton x:Name="violetHighlightButton" Grid.Column="4" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 9}" Margin="3" Height="24" Width="24" Background="#FF800080" ToolTip="VioletHighlightToolTip"/>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="darkRedHighlightButton" Grid.Column="0" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 10}" Margin="3" Height="24" Width="24" Background="#FF800000" ToolTip="DarkRedHighlightToolTip"/>
                                    <ToggleButton x:Name="darkYellowHighlightButton" Grid.Column="1" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 11}" Margin="3" Height="24" Width="24" Background="#FF808000" ToolTip="DarkYellowHighlightToolTip"/>
                                    <ToggleButton x:Name="darkGrayHighlightButton" Grid.Column="2" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 12}" Margin="3" Height="24" Width="24" Background="#FF808080" ToolTip="Gray50HighlightToolTip"/>
                                    <ToggleButton x:Name="lightGrayHighlightButton" Grid.Column="3" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 13}" Margin="3" Height="24" Width="24" Background="#FFC0C0C0" ToolTip="Gray25HighlightToolTip"/>
                                    <ToggleButton x:Name="blackHighlightButton" Grid.Column="4" Style="{StaticResource HighlightColorToggleButtonStyle}" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 14}" Margin="3" Height="24" Width="24" Background="#FF000000" ToolTip="BlackHighlightToolTip"/>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <ToggleButton x:Name="noHighlightButton" IsChecked="{Binding Selection.CharacterFormat.HighlightColor, Mode=TwoWay, Converter={StaticResource HighlightColorToggleConverter},ConverterParameter= 15}" Margin="2" Height="24" Width="Auto" BorderThickness="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Background="Transparent" ToolTip="NoColor">
                                        <ToggleButton.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Height="16" Width="16" Margin="8 0 8 0" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Gray" BorderThickness="1"/>
                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Stretch" Text="NoColor" Foreground="#333333"/>
                                            </StackPanel>
                                        </ToggleButton.Content>
                                    </ToggleButton>
                                </Grid>
                            </Grid>
                        </syncfusion:SplitButton>
                        <syncfusion:SplitButton x:Name="fontColorSplitButton" ToolTipService.ShowOnDisabled="True" Padding="2" SmallIcon="Resources/RibbonImages/Home/Font/Fonts16.png" SizeForm="ExtraSmall">
                            <syncfusion:SplitButton.ToolTip>
                                <syncfusion:ScreenTip Description="FontColor" >
                                    <TextBlock Text="FontColorToolTip" TextWrapping="Wrap" MaxWidth="250"/>
                                </syncfusion:ScreenTip>
                            </syncfusion:SplitButton.ToolTip>
                            <syncfusion:ColorPickerPalette x:Name="fontColorPicker" AutomaticColor="#00000000" IsExpanded="true" BlackWhiteVisibility="Both" MoreColorOptionVisibility="Visible" />
                        </syncfusion:SplitButton>
                    </syncfusion:ButtonPanel>
                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Header="Paragraph" IsLargeButtonPanel="False" Width="192" LauncherCommand="syncfusion:SfRichTextBoxAdv.ShowParagraphDialogCommand">
                    <syncfusion:ButtonPanel Height="24">
                        <syncfusion:SplitButton x:Name="bulletedListSplitButton" ToolTipService.ShowOnDisabled="True" Height="22" Width="37" Padding="2" SmallIcon="Resources/RibbonImages/Home/Paragraph/Bullets16.png" SizeForm="ExtraSmall">
                            <syncfusion:SplitButton.ToolTip>
                                <syncfusion:ScreenTip Description="BulletsToolTipHeader" >
                                    <StackPanel>
                                        <TextBlock Text="BulletsToolTip"/>
                                        <TextBlock/>
                                        <TextBlock Text="BulletsToolTipMore"   MaxWidth="250" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </syncfusion:ScreenTip>
                            </syncfusion:SplitButton.ToolTip>
                            <Grid Background="#FFFFFF">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="BulletLibrary" FontWeight="Bold" Padding="4 0 0 0" Margin="2 6" VerticalAlignment="Top" SnapsToDevicePixels="True" />
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="noBulletButton" Grid.Column="0" BorderThickness="0" Background="Transparent" Padding="4" HorizontalContentAlignment="Left" ToolTip="None">
                                        <ToggleButton.Content>
                                            <Image Height="40" Width="40" Source="Resources/RibbonImages/Home/Paragraph/Bullets/Bullet_None.png"/>
                                        </ToggleButton.Content>
                                    </ToggleButton>
